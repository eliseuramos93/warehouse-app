<h1>Informações sobre <%= @product_model.sku %></h1>

<dl>
  <dt><%= ProductModel.human_attribute_name(:name) %>: </dt>
  <dd><%= @product_model.name %></dd>
  <dt><%= ProductModel.human_attribute_name(:sku) %>: </dt>
  <dd><%= @product_model.sku %></dd>
  <dt><%= ProductModel.human_attribute_name(:weight) %>: </dt>
  <dd><%= @product_model.weight %>g</dd>
  <dt>Dimensões: </dt>
  <dd><%= @product_model.height %>cm x <%= @product_model.width %>cm x <%= @product_model.depth %>cm</dd>
  <dt><%= ProductModel.human_attribute_name(:supplier_id) %>: </dt>
  <dd><%= @product_model.supplier.brand_name %></dd>
</dl>