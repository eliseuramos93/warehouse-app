<h1>Lista de Fornecedores</h1>

<%= link_to 'Criar Fornecedor', new_supplier_path %>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Empresa</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to supplier.brand_name, supplier %></td>
          <td><%= supplier.city %> - <%= supplier.state %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados</p>
<% end %>

<div>
  <%= link_to 'Voltar', root_path %>
</div>